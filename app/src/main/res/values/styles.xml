<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Dimens. -->
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="StyleTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_12</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_12</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_12</item>
    </style>

    <style name="StyleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
        <item name="cornerRadius">@dimen/dp_12</item>
        <item name="android:padding">@dimen/dp_20</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="StyleButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="cornerRadius">@dimen/dp_12</item>
        <item name="android:padding">@dimen/dp_20</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Toolbar.NavigationButton" parent="">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>
</resources>
